<link rel="stylesheet" type="text/css" href="~/Styles/ApplePayStyling.css">
<script src="~/Scripts/apple-pay-sample.js"></script>

<script>

    //change Place Order button in  apple pay styling
    jsChangePaymentList = document.getElementsByClassName("jsChangePayment");
    for (var i = 0; i < jsChangePaymentList.length; i++) {
        jsChangePaymentList[i].addEventListener("click", function (e) {
            if (canUseApplePay()) {
                var paymentOptions = document.getElementsByClassName("jsChangePayment");
                for (var i = 0; i < paymentOptions.length; i++) {
                    if (paymentOptions.item(i).value === "CyberSourceApplePay" && paymentOptions.item(i).checked) {
                        document.getElementById("placeOrder").innerHTML = '';
                        document.getElementById("placeOrder").className =
                            'apple-pay-button apple-pay-button-white pull-right';

                        return;
                    } else {
                        document.getElementById("placeOrder").className =
                            'btn btn-primary btn--blue pull-right';
                        document.getElementById("placeOrder").innerHTML = 'Place order';
                    }
                }
            }
        });
    }

</script>